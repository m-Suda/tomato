{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "tomato",
  "short_name": "tomato",
  "description": "ポモドーロテクニックで使われている時間(20, 25, 30)だけを扱うタイマーです。",
  "permissions": [
    "notifications",
    "storage"
  ],
  "browser_action": {
    "default_popup": "tomato.html",
    "default_icon": "img/tomato_19.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "img/tomato_16.png",
    "48": "img/tomato_48.png",
    "128": "img/tomato_128.png"
  }
}